{
  "preset": "ts-jest",
  "testMatch": [
      "**/?(*.)+(test).ts"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "resetMocks": true,
  "clearMocks": true,
  "moduleFileExtensions": ["ts", "js"],
  "moduleNameMapper": {
    "^@/(.*)": "<rootDir>/crm/$1",
    "@client/(.*)": "<rootDir>/client/$1",
    "@/(.*)": "<rootDir>/src/$1"
 }
}